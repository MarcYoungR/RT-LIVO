<launch>
<!-- Launch file for Livox AVIA LiDAR -->

	<arg name="rviz" default="true" />

	<rosparam command="load" file="$(find rt_livo)/config/NTU_VIRAL.yaml" />

	<node pkg="rt_livo" type="rtlivo_mapping" name="laserMapping" output="screen">
		<rosparam file="$(find rt_livo)/config/camera_NTU_VIRAL.yaml" />
	</node>

	<group if="$(arg rviz)">
		<node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find rt_livo)/rviz_cfg/ntu_viral.rviz" />
	</group>
</launch> 	
